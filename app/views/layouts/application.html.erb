<!DOCTYPE html>
<html>
<head>
  <title>Trending</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
  	#topbar {
    background-color: #fff;
    margin: 0;
    position: fixed;
    top: 0;
    padding: 0;
    height: 50px;
    width: 100%;
  }
  #topbar #login {
    cursor: pointer;
    float: right;
    margin-right: 100px;
  }
  </style>
</head>
<body>

	<div id="topbar"> 
        <img id="logo" />
        <% if user_signed_in? %>
          <h4 id="login"> <%= link_to("Logout", destroy_user_session_path, :method => :delete) %> </h4>
        <% else %>
          <h4 id="login" >
            SIGN IN
          </h4>
        <% end %>
    </div>

<%= yield %>

</body>
</html>
